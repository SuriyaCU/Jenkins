pipeline {
    agent any

    environment {
        PATH = "/usr/bin:$PATH"
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Clean Workspace') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    // Fix permissions before cleaning
                    sh 'sudo chown -R $(whoami):$(whoami) target || true'
                    sh 'rm -rf target || true'
                }
            }
        }

        stage('Build with Maven') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_TOKEN')]) {
                        sh "mvn sonar:sonar -Dsonar.login=${SONAR_TOKEN} -Dsonar.host.url=http://13.235.19.44:9000"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'docker build -t suriyacu/ultimate-cicd:1 .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push suriyacu/ultimate-cicd:1
                    """
                }
            }
        }

        stage('Update Deployment Manifest') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/k8s-manifests') {
                    sh "sed -i 's|image: .*|image: suriyacu/ultimate-cicd:1|' deployment.yaml"
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s') {
                    sh 'kubectl apply -f k8s-manifests/deployment.yaml'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up Docker containers and images...'
            sh 'docker system prune -af || true'
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
