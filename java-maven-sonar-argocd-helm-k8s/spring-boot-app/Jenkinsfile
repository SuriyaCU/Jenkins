pipeline {
    agent any

    environment {
        // Ensure Jenkins can find docker
        PATH = "/usr/bin:$PATH"
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Pull your code from Git
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('SonarQube Analysis') {
            environment {
                SONAR_TOKEN = credentials('sonarqube-token') // Replace with your Jenkins SonarQube token ID
            }
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh "mvn sonar:sonar -Dsonar.login=${SONAR_TOKEN} -Dsonar.host.url=http://13.235.19.44:9000"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'docker build -t suriyacu/ultimate-cicd:1 .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push suriyacu/ultimate-cicd:1
                    """
                }
            }
        }

        stage('Update Deployment Manifest') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/k8s-manifests') {
                    sh """
                        sed -i 's|image: .*|image: suriyacu/ultimate-cicd:1|' deployment.yaml
                    """
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s') {
                    sh 'kubectl apply -f k8s-manifests/deployment.yaml'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up Docker containers (if any)...'
            sh 'docker system prune -af || true'
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
